<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FlsurfDesktop.Views.SecretPhraseWindow"
        Title="{DynamicResource Loc_SecretPhraseTitle}" Width="360" Height="180"
        WindowStartupLocation="CenterOwner">
  <StackPanel Margin="20" Spacing="12" HorizontalAlignment="Center">
    <TextBlock Text="{DynamicResource Loc_SecretPhrasePrompt}"
               FontSize="16" TextWrapping="Wrap"/>
    <TextBox Placeholder="{DynamicResource Loc_EnterSecretPhrase}" 
             Text="{Binding Phrase}" Width="280"/>
    <Button Content="{DynamicResource Loc_VerifyPhrase}" 
            Command="{Binding VerifyCommand}" Width="280"/>
    <TextBlock Text="{Binding StatusMessage}" 
               Foreground="Red" HorizontalAlignment="Center"/>
  </StackPanel>
</Window>
