<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FlsurfDesktop.ViewModels"
        xmlns:lang="clr-namespace:FlsurfDesktop.Resources.Strings"
        x:Class="FlsurfDesktop.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="FlSurf Login"
        CanResize="False" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
	<Border Padding="30">
		<StackPanel Spacing="15" Width="320">
			<TextBlock Text="FlSurf Desktop" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
			<TextBlock Text="{x:Static lang:Strings.Greeting}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
			<TextBox Text="{Binding Email}" Watermark="Email" IsEnabled="{Binding !IsBusy}"/>
			<TextBox Text="{Binding Password}" PasswordChar="•" Watermark="Password" IsEnabled="{Binding !IsBusy}"/>
			<Button Content="{x:Static lang:Strings.Login}" Command="{Binding LoginCommand}" HorizontalAlignment="Stretch" Classes="primary"/>
			<ProgressBar IsIndeterminate="True" IsVisible="{Binding IsBusy}" Margin="0,10,0,0"/>
			<TextBlock Text="{Binding StatusMessage}" Foreground="Red" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0"/>
		</StackPanel>
	</Border>
</Window>