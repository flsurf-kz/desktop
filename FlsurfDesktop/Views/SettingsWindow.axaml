<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FlsurfDesktop.Views.SettingsWindow"
        Title="{DynamicResource Loc_SettingsTitle}" 
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner">
  <StackPanel Margin="12" Spacing="12">
    <!-- Язык -->
    <StackPanel Orientation="Horizontal" Spacing="6">
      <TextBlock Text="{DynamicResource Loc_Language}" VerticalAlignment="Center"/>
      <ComboBox Width="200" SelectedItem="{Binding SelectedLanguage}">
        <ComboBoxItem Content="English" Tag="en"/>
        <ComboBoxItem Content="Русский" Tag="ru"/>
        <ComboBoxItem Content="Қазақша" Tag="kk"/>
      </ComboBox>
    </StackPanel>

    <!-- Уведомления -->
    <CheckBox Content="{DynamicResource Loc_DesktopNotifications}"
              IsChecked="{Binding NotificationsEnabled}"/>
    <CheckBox Content="{DynamicResource Loc_BadgeCount}"
              IsChecked="{Binding BadgeCountEnabled}"/>

    <!-- Информация про себя -->
    <Button Content="{DynamicResource Loc_EditProfile}" 
            Command="{Binding EditProfileCommand}"/>

    <!-- Выход -->
    <Button Content="{DynamicResource Loc_Logout}" 
            Command="{Binding LogoutCommand}"
            HorizontalAlignment="Right"/>
  </StackPanel>
</Window>
